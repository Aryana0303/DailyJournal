
<%- include("partials/header"); -%>
<h1>Edit Post</h1>
    <form class="" action="/edit/<%= post._id %>" method="post">
      <div class="form-group">
        <label for="postTitle">Title</label>
        <input class="form-control" type="text" id="postTitle" name="postTitle" value="<%= post.title %>">
        <label for="postBody">Post</label>
        <textarea class="form-control" name="postBody" rows="5" cols="30"><%= post.content %></textarea>
      </div>
      <button class="btn btn-info" type="submit" name="button">Publish</button>
    </form>

 <%- include("partials/footer"); -%>